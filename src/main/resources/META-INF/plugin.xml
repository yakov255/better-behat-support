<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.yakov255.betterbehatsupport</id>
    <name>better-behat-support</name>
    <vendor>yakov255</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>gherkin</depends>
    <depends>com.intellij.modules.phpstorm</depends>

    <extensions defaultExtensionNs="com.intellij">
        <psi.referenceContributor language="Gherkin" implementation="com.github.yakov255.betterbehatsupport.GherkinStepReferenceContributor"/>
    </extensions>

    <actions>
        <action id="PhpBetterBehatSupport.PhpMethodCallMap"
                class="com.github.yakov255.betterbehatsupport.PhpMethodCallMapAction"
                text="Show PHP Method Call Map"
                description="Shows a map of method calls for the current PHP method">
            <add-to-group group-id="ToolsMenu" anchor="after" relative-to-action="GenerateJavadoc"/>
        </action>
        
        <action id="PhpBetterBehatSupport.PhpMethodCallMapContext"
                class="com.github.yakov255.betterbehatsupport.PhpMethodCallMapContextAction"
                text="Show Call Map"
                description="Shows a call map for the PHP method under cursor">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
